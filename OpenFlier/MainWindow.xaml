<Window x:Class="OpenFlier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFlier"
        mc:Ignorable="d" Loaded="Window_Loaded" Background="Transparent" WindowStyle="None"
        Title="MainWindow" Height="450" Width="800" TextElement.FontSize="14" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="IPAddress"/>
            <TextBlock Name="ConnectCode"/>
            <TextBlock Name="MachineIdentifier"/>
        </StackPanel>
    </Grid>
</Window>
